<%- contentFor('title') %>
    Atualizar Itens
<%- contentFor('main') %>
<style>
    .formAtt{
    width: 400px;
    height: 400px;
    border: 1px solid black;

    
}
</style>
<h3 class="m-3">Atualizar</h3>
<div class="formAtt">
<form action="/atualizaritem" method="post">
    <input type="hidden" name="id_restaurante" value=<%=restaurante.id_restaurante%>>
    <input type="hidden" name="id_item" value=<%=item.id_item%>>
    <div class="form-group m-3">
        
        <input type="text" value="<%=item.nome%>" class="form-control" placeholder="Nome" name="nome">
    </div>
    <div class="form-group m-3">
        
        <input type="text" value="<%=item.descricao%>" class="form-control" placeholder="Descrição" name="descricao">
    </div>
    <div class="form-group m-3">
        
        <input type="number" step="0.01" value="<%=item.valor%>" class="form-control" placeholder="Valor" name="valor">
    </div>
    <div class="form-group m-3">
        
    <button type="submit" class="btn btn-primary">Atualizar</button>
</div>
</form>