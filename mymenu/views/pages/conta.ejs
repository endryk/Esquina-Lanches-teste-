<%- contentFor('title') %>
    Pedido Finalizado
<%- contentFor('main') %>
<h3 class="m-3">Pedido Finalizado</h3>
    <div class="card m-4">
        <div class="card-body">
            <table class="table table-striped table-dark table-bordered">
                <thead>
                  <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col">Valor(R$)</th>
                  </tr>
                </thead>
                <tbody>
                <% pedidos.forEach(function(pedido){ %>
                  <tr>
                    <td><%= pedido.nome %></td>
                    <td><%= pedido.quantidade %></td>
                    <td><%= pedido.valor * pedido.quantidade %> </td>
                  </tr>
                <% }) %> 
                </tbody>
              </table>
              <h4>Total: R$<%= total %></h4>
              <br>
              <br>
              <br>    
        </div>
    </div>

            
 